<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.stx.xhb.xbanner.XBanner
        android:id="@+id/xbanner_icon_goods"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="￥："
        android:textColor="#ff0000"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/xbanner_icon_goods"
        app:layout_constraintTop_toBottomOf="@id/xbanner_icon_goods" />

    <TextView
        android:id="@+id/tv_goods_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="撒娇的查克拉就看得见啊控件的"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/xbanner_icon_goods"
        app:layout_constraintRight_toRightOf="@id/xbanner_icon_goods"
        app:layout_constraintTop_toBottomOf="@id/tv_goods_price" />

</android.support.constraint.ConstraintLayout>