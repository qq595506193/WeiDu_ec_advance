<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/bg_wdf"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="372dp"
        android:layout_marginTop="142dp"
        android:background="@drawable/my_shape_radius"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintTop_toTopOf="parent" />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image_header"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        fresco:roundAsCircle="true"
        android:layout_marginTop="102dp"
        />
    <TextView
        android:id="@+id/my_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="20dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintTop_toBottomOf="@id/my_image_header"
        />
    <ImageView
        android:id="@+id/my_image_personal"
        android:layout_width="24dp"
        android:layout_height="24dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintTop_toBottomOf="@id/my_text_name"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="70dp"
        android:src="@mipmap/grzl_wdf"
        />
    <View
        android:id="@+id/my_view_personal"
        android:layout_width="0dp"
        android:layout_height="1dp"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintBottom_toBottomOf="@id/my_image_personal"
        fresco:layout_constraintLeft_toRightOf="@id/my_image_personal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="24dp"
        android:background="#cccccc"
        />
    <TextView
        android:id="@+id/my_text_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fresco:layout_constraintBottom_toTopOf="@id/my_view_personal"
        fresco:layout_constraintLeft_toLeftOf="@id/my_view_personal"
        android:layout_marginBottom="3dp"
        android:text="个人资料"
        android:textSize="14sp"
        android:textColor="#666666"
        />
    <ImageView
        android:id="@+id/my_image_circle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintTop_toBottomOf="@id/my_image_personal"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="25dp"
        android:src="@mipmap/wdqz_wdf"
        />

    <View
        android:id="@+id/my_view_circle"
        android:layout_width="0dp"
        android:layout_height="1dp"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintBottom_toBottomOf="@id/my_image_circle"
        fresco:layout_constraintLeft_toRightOf="@id/my_image_circle"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="24dp"
        android:background="#cccccc"
        />
    <TextView
        android:id="@+id/my_text_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fresco:layout_constraintBottom_toTopOf="@id/my_view_circle"
        fresco:layout_constraintLeft_toLeftOf="@id/my_view_circle"
        android:layout_marginBottom="3dp"
        android:text="我的圈子"
        android:textSize="14dp"
        android:textColor="#666666"
        />


    <ImageView
        android:id="@+id/my_image_foot"
        android:layout_width="24dp"
        android:layout_height="24dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintTop_toBottomOf="@id/my_image_circle"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="25dp"
        android:src="@mipmap/zj_wdf"
        />
    <View
        android:id="@+id/my_view_foot"
        android:layout_width="0dp"
        android:layout_height="1dp"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintBottom_toBottomOf="@id/my_image_foot"
        fresco:layout_constraintLeft_toRightOf="@id/my_image_foot"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="24dp"
        android:background="#cccccc"
        />
    <TextView
        android:id="@+id/my_text_foot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fresco:layout_constraintBottom_toTopOf="@id/my_view_foot"
        fresco:layout_constraintLeft_toLeftOf="@id/my_view_foot"
        android:layout_marginBottom="3dp"
        android:text="我的足迹"
        android:textSize="14dp"
        android:textColor="#666666"
        />
    <ImageView
        android:id="@+id/my_image_wallet"
        android:layout_width="24dp"
        android:layout_height="24dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintTop_toBottomOf="@id/my_image_foot"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="25dp"
        android:src="@mipmap/wdqb_wdf"
        />
    <View
        android:id="@+id/my_view_wallet"
        android:layout_width="0dp"
        android:layout_height="1dp"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintBottom_toBottomOf="@id/my_image_wallet"
        fresco:layout_constraintLeft_toRightOf="@id/my_image_wallet"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="24dp"
        android:background="#cccccc"
        />
    <TextView
        android:id="@+id/my_text_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fresco:layout_constraintBottom_toTopOf="@id/my_view_wallet"
        fresco:layout_constraintLeft_toLeftOf="@id/my_view_wallet"
        android:layout_marginBottom="3dp"
        android:text="我的钱包"
        android:textSize="14dp"
        android:textColor="#666666"
        />
    <ImageView
        android:id="@+id/my_image_site"
        android:layout_width="24dp"
        android:layout_height="24dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintTop_toBottomOf="@id/my_image_wallet"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="25dp"
        android:src="@mipmap/shdz_wdf"
        />

    <View
        android:id="@+id/my_view_site"
        android:layout_width="0dp"
        android:layout_height="1dp"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintBottom_toBottomOf="@id/my_image_site"
        fresco:layout_constraintLeft_toRightOf="@id/my_image_site"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="24dp"
        android:background="#cccccc"
        />
    <TextView
        android:id="@+id/my_text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fresco:layout_constraintBottom_toTopOf="@id/my_view_site"
        fresco:layout_constraintLeft_toLeftOf="@id/my_view_site"
        android:layout_marginBottom="3dp"
        android:text="我的收货地址"
        android:textSize="14dp"
        android:textColor="#666666"
        />

</android.support.constraint.ConstraintLayout>