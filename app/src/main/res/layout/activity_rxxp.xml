<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/seek_con"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/seek_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/seek_navigation"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_36"
            android:src="@mipmap/common_btn_menu" />

        <EditText
            android:id="@+id/seek_search_edit"
            android:layout_width="@dimen/dp_230"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_33"
            android:layout_toRightOf="@id/seek_navigation"
            android:background="@drawable/sercrh_edit"
            android:hint="请输入您要搜索的内容"
            android:paddingLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_15"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/seek_search_image"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_36"
            android:src="@mipmap/search"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/seek_search"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_36"
            android:src="@mipmap/search" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/seek_navigation_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_rela">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/seek_navigation_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/bg_one"
            android:paddingLeft="@dimen/dp_4" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/seek_navigation_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_92"
            android:background="#805d5d5d"
            android:paddingLeft="@dimen/dp_4" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/seek_rela_classify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:clipChildren="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_rela">

        <ImageView
            android:id="@+id/seek_classify_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30" />

        <TextView
            android:id="@+id/seek_classify_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="#ff5f57"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/seek_xrecy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_24"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/xrecy_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_rela_classify"
        app:layout_constraintVertical_bias="1.0" />

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/seek_search_xrecy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_24"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/xrecy_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_rela_classify"
        app:layout_constraintVertical_bias="1.0" />

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/seek_navigation_xrecy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_24"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/xrecy_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_rela_classify"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/xrecy_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/seek_no_lin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_rela">

        <ImageView
            android:layout_width="@dimen/dp_103"
            android:layout_height="@dimen/dp_89"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_78"
            android:background="@mipmap/meiyoushop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="抱歉，没有找到商品额"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>